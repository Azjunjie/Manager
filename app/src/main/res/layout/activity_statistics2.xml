<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.aitewei.manager.activity.statistics.Statistics2Activity">

    <include layout="@layout/layout_tool_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/d30"
        android:layout_marginRight="@dimen/d30"
        android:layout_weight="1"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d60"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="船名:"
                android:textColor="@color/text_31"
                android:textSize="@dimen/f14" />

            <TextView
                android:id="@+id/tv_ship_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d45"
                android:layout_marginLeft="@dimen/d60"
                android:background="@drawable/shape_stroke_corner_bg"
                android:gravity="center_vertical"
                android:hint="船舶一"
                android:paddingLeft="@dimen/d10"
                android:textColor="@color/text_31"
                android:textColorHint="@color/text_c0"
                android:textSize="@dimen/f14" />

            <ImageView
                android:layout_width="@dimen/d8"
                android:layout_height="@dimen/d16"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="@dimen/d10"
                android:background="@mipmap/icon_more_btn" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d15"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="舱位:"
                android:textColor="@color/text_31"
                android:textSize="@dimen/f14" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/d45"
                android:layout_marginLeft="@dimen/d60"
                android:background="@drawable/shape_stroke_corner_bg"
                android:gravity="center_vertical"
                android:hint="一舱"
                android:paddingLeft="@dimen/d10"
                android:textColor="@color/text_31"
                android:textColorHint="@color/text_c0"
                android:textSize="@dimen/f14" />
        </FrameLayout>

        <Button
            android:id="@+id/btn_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d45"
            android:layout_marginTop="@dimen/d30"
            android:background="@drawable/shape_corner_btn_bg"
            android:text="查询"
            android:textColor="@color/white"
            android:textSize="@dimen/f15" />
    </LinearLayout>

    <include layout="@layout/layout_bottom_tab_item" />

</LinearLayout>
